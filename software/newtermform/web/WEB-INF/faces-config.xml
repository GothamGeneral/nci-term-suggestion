<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC
"-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
"http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>
    <application>
        <message-bundle>gov.nih.nci.evs.browser.bean.Resources</message-bundle>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>en-us</supported-locale>
            <supported-locale>fr</supported-locale>
            <supported-locale>es</supported-locale>
        </locale-config>
    </application>

  <!-- Navigation: Request Change ========================================== -->
  <navigation-rule>
    <from-view-id>/pages/change_request.jsp</from-view-id>
    <navigation-case>
       <description>Message</description>
       <from-action>#{userSessionBean.changeRequest}</from-action>
       <from-outcome>message</from-outcome>
       <to-view-id>/pages/message.jsp</to-view-id>
    </navigation-case>

    <navigation-case>
       <description>New Concept</description>
       <from-action>#{userSessionBean.changeRequest}</from-action>
       <from-outcome>new_concept</from-outcome>
       <to-view-id>/pages/new_concept.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

  <!-- Managed Beans ======================================================= -->
  <managed-bean>
    <managed-bean-name>userSessionBean</managed-bean-name>
    <managed-bean-class>gov.nih.nci.evs.browser.bean.UserSessionBean</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
</faces-config>